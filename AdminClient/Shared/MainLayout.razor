@code {
    private bool isAuthenticated = false;
    
    private Bar sidebar;
    bool expandSubNav{ get; set; }

    
    public void Toggle()
    {

    
        aaa();
    }
    Dictionary<string, object> HtmlAttribute = new Dictionary<string, object>()
    {
        {"class", "dockSidebar" }
    };

    async Task Logout()
    {
        await JsRuntime.InvokeAsync<string>("blazorExtensions.ClearCookies");
        await CheckLogin();
        NavigationManager.NavigateTo("/login", false);
    }
    private List<ATreeNode> enitits=null;
    IAdminUser user;    
    async Task aaa(){
        if(!(await CheckLogin()))
            return ;
        try
        {
            user = await Program.GetUser();
        }
        catch(Exception e)
        {
            NavigationManager.NavigateTo("/login", false);
            return;
        }
        Console.WriteLine("GetUser</> "+user);
        enitits=Program.ChangeMenu(user);
    }

    protected override async Task OnInitializedAsync()
    {
        await aaa();
        Action onLogout=()=>{
            if (!NavigationManager.Uri.Contains("/login"))
            {
                NavigationManager.NavigateTo("/login", false);
            }
        };
        ClTool.WebClient.webClient.onLogout = onLogout;

        // Set forbidden (403) handler to show notification
        ClTool2.WebClient.onForbidden = async () =>
        {
            await JsRuntime.InvokeVoidAsync("alert", "You do not have access to this model");
        };
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await CheckLogin();
    }

    async Task<bool> CheckLogin()
    {
        isAuthenticated = await Program0.CheckLogin(JsRuntime);
        if(!isAuthenticated)
        {
            if (!NavigationManager.Uri.Contains("/login"))
            {
                NavigationManager.NavigateTo("/login", false);
            }
        }
        return isAuthenticated;
    }
}


FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base


WORKDIR /app


FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build



RUN apt-get update 
RUN apt-get install git -y --no-install-recommends
RUN apt-get install cmake -y --no-install-recommends
RUN apt-get install clang -y --no-install-recommends
RUN apt-get install python3 -y --no-install-recommends
RUN apt-get install ca-certificates -y --no-install-recommends
RUN apt-get install build-essential -y --no-install-recommends
RUN apt-get install emscripten   -y --no-install-recommends
RUN  dotnet workload install  wasm-tools





